# Server Configuration
PORT=8000
HOST=0.0.0.0

# Weather Configuration (Weather.gov - FREE, no API key needed!)
# Just set your coordinates (US locations only)
# Find yours at: https://www.latlong.net/
# Location 1 (e.g., home)
WEATHER_LAT_1=42.393293
WEATHER_LON_1=-71.116595
# Location 2 (e.g., vacation home, office, etc.)
WEATHER_LAT_2=43.840276
WEATHER_LON_2=-71.951976

# Strava Configuration
# Get your credentials at: https://www.strava.com/settings/api
# Follow the OAuth flow to get your refresh token
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
STRAVA_REFRESH_TOKEN=your_strava_refresh_token

# Google Calendar Configuration (Optional)
# Run setup_calendar.py to generate token.json, then set:
# Multiple calendars can be specified as comma-separated list
GOOGLE_CALENDAR_TOKEN_FILE=token.json
GOOGLE_CALENDAR_IDS=primary,calendar_id_1@group.calendar.google.com,calendar_id_2@group.calendar.google.com

# Custom Text (Optional)
# Add any custom text to display at the bottom
CUSTOM_TEXT="Have a great day!"

# Web Application Authentication (for web dashboard)
# Set ALLOWED_EMAIL to your Google email to restrict access
ALLOWED_EMAIL=your-email@gmail.com
# Create OAuth credentials at: https://console.cloud.google.com/apis/credentials
# Add http://localhost:8000/auth/callback as authorized redirect URI for local dev
# Add https://your-domain.com/auth/callback for production
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET_KEY=change-me-in-production
# Your web dashboard URL (no trailing slash)
WEB_BASE_URL=http://localhost:8000
